<% include partials/header.ejs %>

    <form class="ui form container main" action="/blogs/<%= blogs._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input name="blogs[title]" type="text" value="<%= blogs.title%>">
        </div>
        
        <div class="field">
            <label>Image</label>
            <input type="text" name="blogs[image]" value="<%= blogs.image%>">
        </div>
        
        <div class="field">
            <label>New Blogs Content</label>
            <textarea name="blogs[body]"><%= blogs.body%></textarea>
        </div>
        
        <button class="ui button big yellow">Update</button>
        <a href="/blogs" class="ui button big blue">Go Back</a>
    </form>

